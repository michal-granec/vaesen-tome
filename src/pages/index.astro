---
import Layout from "../layouts/Layout.astro";
import "@/styles/globals.css";

const featuredMonsters = [
  {
    id: 1,
    name: "Skogsra",
    slug: "skogsra",
    description: "A forest spirit with alluring beauty.",
    image: "/images/skogsra.jpg",
  },
  {
    id: 2,
    name: "Myling",
    slug: "myling",
    description: "The restless ghost of a child.",
    image: "/images/myling.jpg",
  },
  {
    id: 3,
    name: "Näcken",
    slug: "nacken",
    description: "A water spirit who lures victims to their death.",
    image: "/images/nacken.jpg",
  },
];
---

<Layout title="Welcome to Astro.">
  <main class="font-serif">
    <!-- Hero Section -->
    <header class="bg-gray-800 p-8 shadow-lg">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold text-yellow-400">Vaesen Bestiary</h1>
        <p class="mt-4 text-xl italic text-gray-300">
          Explore the monsters and spirits of Nordic folklore. Beware, for not
          all tales are mere stories...
        </p>
      </div>
    </header>

    <!-- Search Section -->
    <section class="py-8 bg-gray-700">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-yellow-400 mb-4">
          Search the Bestiary
        </h2>
        <input
          type="text"
          placeholder="Search for a monster..."
          class="w-full p-4 rounded-lg bg-gray-800 text-gray-300 border border-gray-600 focus:outline-none focus:border-yellow-400"
        />
      </div>
    </section>

    <!-- Featured Monsters -->
    <section class="py-8 bg-gray-800">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-yellow-400 mb-4">
          Featured Monsters
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            featuredMonsters.map((monster) => (
              <a
                href={`/monsters/${monster.slug}`}
                class="block bg-gray-700 p-4 rounded-lg shadow hover:shadow-lg hover:bg-gray-600 transition"
              >
                <img
                  src={monster.image}
                  alt={monster.name}
                  class="rounded-lg mb-4"
                />
                <h3 class="text-xl font-bold text-yellow-400">
                  {monster.name}
                </h3>
                <p class="text-gray-300 mt-2">{monster.description}</p>
              </a>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 py-4">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-sm text-gray-400">
          © 2024 Vaesen Bestiary. All rights reserved.
        </p>
      </div>
    </footer>
  </main>
</Layout>
